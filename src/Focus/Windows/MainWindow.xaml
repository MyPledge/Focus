<Window x:Class="Focus.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Focus"
        mc:Ignorable="d" 
        Title="MainWindow" SizeToContent="Height" Width="908"
        AllowsTransparency="True" Background="Transparent" WindowStyle="None">
    <Border BorderThickness="1" BorderBrush="AliceBlue" CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="1" Height="502" BorderThickness="0 1 0 0" BorderBrush="AliceBlue">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="375"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </Border>
            
        </Grid>
    </Border>
</Window>
